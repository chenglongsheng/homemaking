.container {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.tabs {
    display: flex;
    padding: 30rpx 0;
    background-color: #FFFFFF;
    align-items: center;
    height: 126rpx;
    box-sizing: border-box;
}

.tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tab-label {
    color: #888888;
    white-space: nowrap;
}

.active-tab {
    color: #333333;
    font-weight: bolder;
}

.divider {
    margin-top: 10rpx;
    height: 6rpx;
    width: 50rpx;
    background-color: #f3d066;
}

.tab-panel {
    flex: 1;
    height: 100%;
}